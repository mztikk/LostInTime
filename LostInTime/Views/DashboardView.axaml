<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LostInTime.ViewModels"
             xmlns:e="using:EventBinder"
             xmlns:converter="using:LostInTime.Converter"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LostInTime.Views.DashboardView"
             x:DataType="vm:DashboardViewModel"
             x:CompileBindings="True">
  <UserControl.Resources>
    <converter:ReturnParameterConverter x:Key="returnParameterConverter"/>
  </UserControl.Resources>
  
  <TabControl>
    <TabItem Header="Characters">
      <TransitioningContentControl Content="{Binding CurrentPage}" AttachedToVisualTree="{e:EventBinding OnTabChanged, {x:Type vm:CharacterStorageViewModel}}"/>
    </TabItem>
    <TabItem Header="Daily">
      <TransitioningContentControl Content="{Binding CurrentPage}" AttachedToVisualTree="{e:EventBinding OnTabChanged, {x:Type vm:CharacterStorageViewModel}}"/>
    </TabItem>
  </TabControl>
</UserControl>
